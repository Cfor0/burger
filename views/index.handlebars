<h1>Eat da Burger</h1>



<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burger_name}}</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burgers}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>



  <button type="submit">Add Burger</button>
</form>

